{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <h1>Les cours</h1>
    </div>
    <!-- Liste des cours -->
    {% for lesson in lessons %}
        <div class="row">
            <div class="col offset-s1 s10 l6 offset-l3">
                <div class="card indigo">
                    <div class="card-content white-text">
                        <span class="card-title">{{ lesson.name }}</span>
                        {% for historic in historics %}
                            {% if lesson.id == historic.id %}<p class="chip green">Terminé</p>{% endif %}
                        {% endfor %}
                    </div>
                    <div class="card-action">
                        <a href="{{ path('cours', { 'name': lesson.name }) }}">Accès au cours</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}