{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 offset-m1 m10">

            <h1>{{ lesson.name }}</h1>
            <h2>Liste des questions</h2>
            <p>
                <a href="{{ path('admin_lesson_index') }}"><i class="material-icons left">ondemand_video</i>Retour aux cours</a>
            </p>
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for question in questions %}
                    <tr>
                        <td><a href="{{ path('admin_question_show', { 'id': question.id }) }}">{{ question.id }}</a></td>
                        <td>{{ question.name }}</td>
                        <td>
                                <p>
                                    <a href="{{ path('admin_question_show', { 'id': question.id }) }}"><i class="material-icons left">remove_red_eye</i>Voir</a>
                                </p>
                                <p>
                                    <a href="{{ path('admin_question_edit', { 'id': question.id }) }}"><i class="material-icons left">build</i>Editer</a>
                                </p>
                                <p>
                                    <a href="{{ path('admin_answer_index', { 'id': question.id }) }}"><i class="material-icons left">question_answer</i>Réponses</a>
                                </p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_question_new', { 'id': lesson.id }) }}"><i class="material-icons left">add_circle_outline</i>Créer une nouvelle question</a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
