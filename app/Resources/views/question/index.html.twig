{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 offset-m1 m10">
            <ul>
                <li>
                    <a href="{{ path('admin_lesson_index') }}">Retour aux cours</a>
                </li>
            </ul>
            <h1>{{ lesson.name }}</h1>
            <h2>Liste des questions</h2>

            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for question in questions %}
                    <tr>
                        <td><a href="{{ path('admin_question_show', { 'id': question.id }) }}">{{ question.id }}</a></td>
                        <td>{{ question.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_question_show', { 'id': question.id }) }}">voir</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_question_edit', { 'id': question.id }) }}">éditer</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_answer_index', { 'id': question.id }) }}">réponses</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_question_new', { 'id': lesson.id }) }}">Créer une nouvelle question</a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
