{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 offset-m1 m10">
            <h1>Question</h1>

            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ question.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ question.name }}</td>
                </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_question_index', { 'id': question.lesson.id}) }}">Retour aux questions</a>
                </li>
                <li>
                    <a href="{{ path('admin_question_edit', { 'id': question.id }) }}">Editer</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
