{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 offset-m1 m10">
            <h1>Question</h1>

            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ question.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ question.name }}</td>
                </tr>
                </tbody>
            </table>

                <p>
                    <a href="{{ path('admin_question_index', { 'id': question.lesson.id}) }}"><i class="material-icons left">live_help</i>Retour aux questions</a>
                </p>
                <p>
                    <a href="{{ path('admin_question_edit', { 'id': question.id }) }}"><i class="material-icons left">build</i>Editer</a>
                </p>
                <p>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </p>
        </div>
    </div>

{% endblock %}
