<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Watch & Answer{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
              rel="stylesheet">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<nav class="green darken-4">
    <div class="nav-wrapper">
        <a href="{{ path('home') }}" class="brand-logo"><i class="material-icons left">ondemand_video</i>Watch & Answer</a>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            {% if app.user %}
                {% if app.user.hasRole('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_lesson_index') }}"><i class="material-icons left">border_color</i>Admin</a></li>
                {% endif %}
            {% endif %}
            <li><a href="{{ path('courses') }}"><i class="material-icons left">ondemand_video</i>Cours</a></li>
            <li>
                {% if app.user %}
                    <a href="{{ path('fos_user_profile_show') }}"><i class="material-icons left">person</i>{{ app.user.username }}</a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}"><i class="material-icons left">person_outline</i>Login</a>
                {% endif %}
            </li>
            <li>
                {% if app.user %}
                    <a href="{{ path('fos_user_security_logout') }}"><i class="material-icons">exit_to_app</i></a>
                {% else %}
                    <a href="{{ path('fos_user_registration_register') }}"><i class="material-icons left">border_color</i>S'inscrire</a>
                {% endif %}
            </li>

        </ul>
        <ul class="side-nav" id="mobile-demo">
            {% if app.user %}
                {% if app.user.hasRole('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_lesson_index') }}"><i class="material-icons left">border_color</i>Admin</a></li>
                {% endif %}
            {% endif %}
            <li><a href="{{ path('courses') }}"><i class="material-icons left">ondemand_video</i>Cours</a></li>
            <li>
                {% if app.user %}
                    <a href="{{ path('fos_user_profile_show') }}"><i class="material-icons left">person</i>{{ app.user.username }}</a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}"><i class="material-icons left">person_outline</i>Login</a>
                {% endif %}
            </li>
            <li>
                {% if app.user %}
                    <a href="{{ path('fos_user_security_logout') }}"><i class="material-icons">exit_to_app</i></a>
                {% else %}
                    <a href="{{ path('fos_user_registration_register') }}"><i class="material-icons left">border_color</i>S'inscrire</a>
                {% endif %}
            </li>
        </ul>
    </div>
</nav>
<div class="container-fluid">
    {% block body %}
    {% endblock %}
</div>
{% block javascripts %}
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <script type="text/javascript">
        $(".button-collapse").sideNav();

    </script>
{% endblock %}
</body>
</html>
