<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Watch & Answer{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}"/>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<nav class="indigo">
    <div class="nav-wrapper">
        <a href="{{ path('home') }}" class="brand-logo">Watch & Answer</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            {% if app.user %}
                {% if app.user.hasRole('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_lesson_index') }}">Admin</a></li>
                {% endif %}
            {% endif %}
            <li><a href="{{ path('courses') }}">Cours</a></li>
            <li>
                <a href="{{ path('fos_user_security_login') }}">{% if app.user %}{{ app.user.username }}{% else %}Login{% endif %}</a>
            </li>
            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
        </ul>
    </div>
</nav>
<div class="container-fluid">
    {% block body %}
    {% endblock %}
</div>
{% block javascripts %}
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

{% endblock %}
</body>
</html>
