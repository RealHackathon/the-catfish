{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 offset-m1 m10">

            <h1>{{ question.name | capitalize }}</h1>
            <h2>Liste des réponses</h2>
            <p>
                <a href="{{ path('admin_question_index', { 'id': question.lesson.id}) }}"><i class="material-icons left">live_help</i>Retour aux questions</a>
            </p>
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Correct</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for answer in answers %}
                    <tr>
                        <td><a href="{{ path('admin_answer_show', { 'id': answer.id }) }}">{{ answer.id }}</a></td>
                        <td>{{ answer.name }}</td>
                        <td>{% if answer.correct %}Oui{% else %}Non{% endif %}</td>
                        <td>
                                <p>
                                    <a href="{{ path('admin_answer_show', { 'id': answer.id }) }}"><i class="material-icons left">remove_red_eye</i>Voir</a>
                                </p>
                                <p>
                                    <a href="{{ path('admin_answer_edit', { 'id': answer.id }) }}"><i class="material-icons left">build</i>Editer</a>
                                </p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_answer_new', { 'id': question.id }) }}"><i class="material-icons left">add_circle_outline</i>Créer une nouvelle réponse</a>
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
